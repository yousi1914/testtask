<?xml version="1.0"?> 

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="customer-account-navigation-status-link"  destination="customer_account_navigation" after="customer-account-navigation-wish-list-link"/>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="customer-account-navigation-status-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Customer Status</argument>
                    <argument name="path" xsi:type="string">status/customer</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
