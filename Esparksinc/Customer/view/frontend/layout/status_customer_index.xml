<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
  <head>
        <title>Status Customer</title>
    </head>
    <update handle="customer_account"/>
    <body>
      <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Status Customer </argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Esparksinc\Customer\Block\Status" name="status_customer" template="Esparksinc_Customer::status.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>